CREATE DATABASE GAMEINFO

USE GAMEINFO

GO

DROP TABLE USER
CREATE TABLE USER
(
	USER_ID				CHAR(8)		NOT NULL	PRIMARY KEY,
	USER_NAME			CHAR(8)		NOT NULL,
	USER_PHONENUMBER	CHAR(11)	NOT NULL,
	USER_EMAIL			CHAR(20)	NOT NULL,
	USER_REGISTER		CHAR(10)	NOT NULL,
	USER_AGE			INTEGER(4)	NOT NULL

);


INSERT INTO USER VALUES('N1', '赵亦',  '13913913399', 'ZHAOYI@163.com', '2017.1.1', '18');





DROP TABLE FAVORITE
CREATE TABLE FAVORITE
(
	FAV_ID		CHAR(8)		NOT NULL	PRIMARY KEY,
	USER_ID		CHAR(8)		NOT NULL,
	FAV_AMOUNT	INTEGER		NOT NULL
);

INSERT INTO FAVORITE VALUES('FN1', 'N1', 4);






DROP TABLE COLLECT
CREATE TABLE COLLECT
(
	FAV_ID			CHAR(8)		NOT NULL,
	GAME_ID			CHAR(8)		NOT NULL	PRIMARY KEY(FAV_ID, GAME_ID),
	COLLECT_TIME	CHAR(8)		NOT NULL
);

INSERT INTO COLLECT VALUES('FN1', 'GN1', '2017.1.2');




DROP TABLE GAME 
CREATE TABLE GAME
(
	GAME_ID			CHAR(8)		NOT NULL	PRIMARY KEY,
	GAME_NAME		CHAR(20)	NOT NULL,
	GAME_CATEGORY	CHAR(8)		NOT NULL,
	GAME_GRADE		INTEGER(2)	NOT NULL,
	GAME_COMPANY	CHAR(20),
	GAME_SIZE		CHAR(8)		NOT NULL,
	GAME_ONLINE		CHAR(8)		NOT NULL,
	GAME_VERSION	CHAR(8)		NOT NULL
);


INSERT INTO GAME VALUES('GN1', 'Final Fantasy', 'RPG', 5, 'Square Enix Company', '55 MB', '1987', '1.1');





DROP TABLE GROUP
CREATE TABLE GROUP
(
	GROUP_ID		CHAR(8)		NOT NULL	PRIMARY KEY,
	GROUP_NAME		CHAR(8)		NOT NULL,
	GAME_ID			CHAR(8)		NOT NULL,
	GROUP_AMOUNT	INTEGER(4)	NOT NULL
);


INSERT INTO GROUP VALUES('GPN1', 'Final lovers', 'GN1', 20);




DROP TABLE JOININ
CREATE TABLE JOININ
(
	USER_ID			CHAR(8)		NOT NULL,
	GROUP_ID		CHAR(8)		NOT NULL	PRIMARY KEY(USER_ID, GROUP_ID),
	JOIN_TIME		CHAR(8)		NOT NULL,
	JOIN_POSITION	CHAR(8)		NOT NULL
)

INSERT INTO JOININ VALUES('N1', 'GPN1', '2017.1.3', 'Leader');



DROP TABLE ARTICLE
CREATE TABLE ARTICLE
(
	A_ID		CHAR(8)		NOT NULL	PRIMARY KEY,
	A_NAME		CHAR(30)	NOT NULL,
	A_TIME		CHAR(8)		NOT NULL,
	GROUP_ID	CHAR(8)		NOT NULL,
	A_AMOUNT	INTEGER(8)	NOT NULL

);

INSERT INTO ARTICLE VALUES('AN1', 'How to play Final Fantasy', '2017.1.4', 'GPN1', 5698);



DROP TABLE CONSULT
CREATE TABLE CONSULT
(
	USER_ID			CHAR(8)		NOT NULL,
	A_ID			CHAR(8)		NOT NULL	PRIMARY KEY(USER_ID, A_ID),
	CONSULT_TIME	CHAR(8)		NOT NULL
);


INSERT INTO	CONSUL VALUES('N1', 'AN1', '2017.1.5')



DROP TABLE CHECKING
CREATE TABLE CHECKING
(
	USER_ID			CHAR(8)		NOT NULL,
	GAME_ID			CHAR(8)		NOT NULL	PRIMARY KEY(USER_ID, GAME_ID),
	CHECK_TIME		CHAR(8)		NOT NULL
);


INSERT	INTO CHECKING VALUES('N1', 'GN1', '2017.1.6')



DROP TABLE FEEDBACK
CREATE TABLE FEEDBACK
(
	F_ID 		CHAR(8)		NOT NULL	PRIMARY KEY,
	USER_ID		CHAR(8)		NOT NULL,
	F_TYPE		CHAR(8)		NOT NULL,
	F_STATUS	CHAR(8)		NOT NULL
);

INSERT INTO FEEDBACK VALUES('FN1', 'N1', 'Problems')
